{
    "name": "sofie-demo-blueprints",
    "version": "0.4.0",
    "repository": "https://github.com/superflytv/sofie-demo-blueprints/",
    "license": "MIT",
    "files": [],
    "scripts": {
        "prepare": "husky install",
        "build": "yarn test && yarn build-now",
        "dist": "yarn build && yarn bundle",
        "bundle": "ts-node scripts/bundle.ts",
        "build-now": "yarn run build-inner --env production",
        "build-inner": "webpack --config webpack.config.js",
        "build-sync-local": "yarn run build --env server=\"http://localhost:3000\"",
        "watch": "yarn run build-inner --watch",
        "watch-sync-local": "yarn run watch --env server=\"http://localhost:3000\"",
        "lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
        "lint": "yarn lint:raw .",
        "unit": "jest",
        "test": "yarn lint && yarn unit",
        "validate:dependencies": "yarn audit && yarn license-validate",
        "license-validate": "yarn sofie-licensecheck",
        "link-integration": "yarn link @sofie-automation/blueprints-integration",
        "translation:extract": "node scripts/translation/extract.js"
    },
    "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
    "engines": {
        "node": ">=12.16"
    },
    "lint-staged": {
        "*.{css,json,md,scss}": [
            "prettier --write"
        ],
        "*.{ts,tsx,js,jsx}": [
            "yarn lint:raw --fix"
        ]
    },
    "devDependencies": {
        "@sofie-automation/code-standard-preset": "~1.1",
        "@types/jest": "^28.1.4",
        "@types/node": "^14.18.21",
        "@types/object-path": "^0.11.1",
        "@types/underscore": "~1.11.4",
        "axios": "^0.27.2",
        "file-loader": "^6.2.0",
        "git-revision-webpack-plugin": "^5.0.0",
        "i18next-conv": "^10.2.0",
        "i18next-parser": "^3.11.0",
        "jest": "^28.1.2",
        "moment": "^2.29.3",
        "ts-jest": "^28.0.5",
        "ts-loader": "^9.1.2",
        "ts-node": "^9.1.1",
        "typescript": "~4.5",
        "vinyl-fs": "^3.0.3",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "@sofie-automation/blueprints-integration": "1.37.2",
        "object-path": "^0.11.8",
        "type-fest": "^2.16.0",
        "underscore": "^1.13.4"
    }
}
