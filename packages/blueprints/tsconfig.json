{
	"extends": "./tsconfig.build.json",
	"exclude": ["node_modules/**", "dist/**"],
	"compilerOptions": {
		"types": ["node", "jest"]
	},
	"paths": {
		"@schemas/*": ["src/schemas/*"],
		"@base/*": ["src/base/*"],
		"@common/*": ["src/common/*"],
		"@main/*": ["src/main/*"],
		"@code-copy/*": ["src/code-copy/*"]
	}
}
